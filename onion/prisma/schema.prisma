generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model auth_user {
  id       BigInt @id @default(autoincrement())
  nome     String @db.VarChar
  email    String @db.VarChar
  password String @db.VarChar
}

model buysket_basket {
  id                   Int                    @id @default(autoincrement())
  created_at           DateTime               @default(now()) @db.Timestamp(6)
  buysket_basket_items buysket_basket_items[]
}

model buysket_basket_items {
  basket_id      Int
  item_id        Int
  id             Int            @id @default(autoincrement())
  buysket_basket buysket_basket @relation(fields: [basket_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_basket_id")
  buysket_items  buysket_items  @relation(fields: [item_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_item_id")
}

model buysket_items {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @db.VarChar
  price                Decimal                @db.Decimal
  image_url            String?                @db.VarChar
  category             String?                @db.VarChar
  rfid                 String                 @unique
  buysket_basket_items buysket_basket_items[]
}
